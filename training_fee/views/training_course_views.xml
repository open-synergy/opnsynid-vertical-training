<openerp>
<data>

<record id="training_course_view_form" model="ir.ui.view">
    <field name="name">training.course form</field>
    <field name="model">training.course</field>
    <field name="inherit_id" ref="training_core.training_course_view_form"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='note']" position="before">
            <page name="fee" string="Fee">
                <group name="fee_1" colspan="4" col="2">
                    <field name="default_pricelist_id"/>
                    <field name="default_payment_term_id"/>
                </group>
                <field name="fee_line_ids" colspan="4" nolabel="1">
                    <tree editable="top">
                        <field name="sequence" widget="handle"/>
                        <field name="product_id" on_change="onchange_product_id(product_id)"/>
                        <field name="quantity"/>
                        <field name="uom_id"/>
                        <field name="tax_ids" widget="many2many_tags"/>
                    </tree>
                </field>
            </page>
        </xpath>
    </field>
</record>
</data>
</openerp>
