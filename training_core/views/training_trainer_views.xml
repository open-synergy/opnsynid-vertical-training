<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="training_trainer_view_tree" model="ir.ui.view">
            <field name="name">training.trainer.tree</field>
            <field name="model">training.trainer</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Trainer">
                    <field name="title" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="training_trainer_view_form" model="ir.ui.view">
            <field name="name">training.trainer.form</field>
            <field name="model">training.trainer</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Trainer">
                <sheet>
                    <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                    <div name="div_1" class="oe_title oe_left">
                        <div name="div_1_1">
                            <label for="partner_id"/>
                            <field name="partner_id" domain="[('is_company','=',False),('parent_id','=',False)]"/>
                        </div>
                        <div name="div_1_3" class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                        <field name="category_id" widget="many2many_tags" placeholder="Tags..."/>
                    </div>
                    <div class="oe_right oe_button_box" name="buttons"> </div>
                    <group name="main_1">
                        <group name="main_1_1">
                            <label for="street" string="Address"/>
                            <div name="div_2">
                                <field name="street" placeholder="Street..."/>
                                <field name="street2"/>
                                <div class="address_format">
                                    <field name="city" placeholder="City" style="width: 40%%"/>
                                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%"/>
                                    <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                                </div>
                                <field name="country_id" placeholder="Country" class="oe_no_button"/>
                            </div>
                            <field name="lau1_id"/>
                            <field name="lau2_id"/>
                            <field name="lau3_id"/>
                        </group>
                        <group name="main_1_2">
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="fax"/>
                            <field name="email" widget="email"/>
                            <field name="title"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="personal_information" string="Personal Information">
                            <group name="personal_information_1" colspan="4" col="2">
                                <group name="personal_information_1_1" string="Medical &amp; Health" colspan="1" col="2">
                                    <field name="gender"/>
                                    <field name="place_of_birth"/>
                                    <field name="birthdate_date"/>
                                    <field name="blood_type_aob"/>
                                    <field name="blood_type_rh"/>
                                </group>
                                <group name="personal_information_1_2" string="Categorization" colspan="1" col="2">
                                    <field name="nationality_id"/>
                                    <field name="religion_id"/>
                                    <field name="ethnicity_id"/>
                                </group>
                            </group>
                        </page>
                        <page name="family" string="Family">
                            <group name="family_1" colspan="4" col="2">
                                <field name="father_id"/>
                                <field name="mother_id"/>
                                <field name="guardian_id"/>
                                <field name="spouse_id"/>
                            </group>
                        </page>
                        <page string="ID Numbers" name="id_numbers">
                            <field name="id_numbers" colspan="4" nolabel="1"
                                   widget="one2many_list"/>
                        </page>
                        <page name="academic" string="Academic Experiences">
                            <field name="academic_ids" context="{'default_partner_id': active_id}">
                                <tree string="Academic Experiences">
                                    <field name="sequence" widget="handle"/>
                                    <field name="education_level_id"/>
                                    <field name="field_of_study_id"/>
                                    <field name="partner_address_id" string="Institution"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="diploma"/>
                                    <field name="gpa"/>
                                </tree>
                                <form string="Academic Experience">
                                    <group name="main">
                                        <field name="partner_address_id" string="Institution" domain="[('is_company','=',1)]"/>
                                        <field name="education_level_id"/>
                                        <field name="field_of_study_id"/>
                                        <field name="diploma"/>
                                        <field name="gpa"/>
                                        <field name="activities"/>
                                        <field name="sequence"/>
                                        <separator string="Dates" colspan="4"/>
                                        <field name="start_date"/>
                                        <field name="expire"/>
                                        <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                        <separator string="Description" colspan="4"/>
                                        <field name="description" colspan="4" nolabel="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="professional" string="Professional Experiences">
                            <field name="experience_ids" context="{'default_partner_id': active_id}">
                                <tree string="Professional Experiences">
                                    <field name="sequence" widget="handle"/>
                                    <field name="partner_address_id" string="Company"/>
                                    <field name="job_id"/>
                                    <field name="job_level_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Professional Experience">
                                    <group name="main">
                                        <field name="partner_address_id" string="Company" domain="[('is_company','=',1)]"/>
                                        <field name="job_id"/>
                                        <field name="job_level_id"/>
                                        <field name="sequence"/>
                                        <separator string="Dates" colspan="4"/>
                                        <field name="start_date"/>
                                        <field name="expire"/>
                                        <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                        <separator string="Description" colspan="4"/>
                                        <field name="description" colspan="4" nolabel="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="certification" string="Certifications">
                            <field name="certification_ids" context="{'default_partner_id': active_id}">
                                <tree string="Certifications">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" string="Certification"/>
                                    <field name="certification" string="# Certificate"/>
                                    <field name="partner_address_id" string="Institution" domain="[('is_company','=',1)]"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Professional Experience">
                                    <group name="main">
                                        <field name="name" string="Certification"/>
                                        <field name="certification" string="# Certification"/>
                                        <field name="partner_address_id" string="Company" domain="[('is_company','=',1)]"/>
                                        <field name="start_date"/>
                                        <field name="expire"/>
                                        <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                        <separator string="Description" colspan="4"/>
                                        <field name="description" colspan="4" nolabel="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="emergency_contact" string="Emergency Contacts">
                            <field name="emergency_contact_ids" nolabel="1" colspan="4"
                                context="{'default_is_company':False}"
                                />
                        </page>
                        <page name="internal_notes" string="Internal Notes">
                            <field name="comment" placeholder="Put an internal note..."/>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>
        <record id="training_trainer_view_search" model="ir.ui.view">
            <field name="name">training.trainer.search</field>
            <field name="model">training.trainer</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Faculty">
                    <field name="name" />
                    <newline />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="training_trainer_action">
            <field name="name">Faculties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.trainer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="training_trainer_view_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="training_trainer_window_form">
            <field name="act_window_id" ref="training_trainer_action" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="training_trainer_view_form" />
        </record>
        <record model="ir.actions.act_window.view" id="training_trainer_window_tree">
            <field name="act_window_id" ref="training_trainer_action" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="training_trainer_view_tree" />
        </record>
        <menuitem
            id="training_trainer_menu"
            name="Trainers"
            parent="training_trainer_root_menu"
            action="training_trainer_action"
            sequence="1"/>
    </data>
</openerp>
